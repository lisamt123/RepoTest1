<apex:page controller="ctrl_trainMe">
<apex:form >

	<script>
    	function setFocusOnLoad() {}
    </script>
	
	<apex:sectionHeader title="Change Request" subtitle="Train Me" />
	
	<apex:pageBlock title="Train Me Change Request">
		<apex:pageBlockButtons >
			<apex:commandButton value="Submit" action="{!saveCR}" />
		</apex:pageBlockButtons>
		<apex:pageBlockSection title="Information" columns="1">
			<apex:pageBlockSectionItem >
				<apex:outputLabel value="Subject" />
				<apex:inputText value="{!subject}" size="50" />
			</apex:pageBlockSectionItem>
			<apex:pageBlockSectionItem >
				<apex:outputLabel value="Request Details" />
				<apex:inputTextArea value="{!requestDetails}" cols="60" rows="7" />
			</apex:pageBlockSectionItem>
		</apex:pageBlockSection>
	</apex:pageBlock> 

</apex:form>
</apex:page>