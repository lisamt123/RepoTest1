<apex:page controller="WelcomePacketWizard" showHeader="false"
	cache="false">
	<head>
<apex:stylesheet value="{!$Resource.styles}"></apex:stylesheet>
	</head>

	<script>
function confirmCancel()
{
    var isCancel = confirm("Are you sure you wish to cancel?");
    return isCancel;
}
</script>

	<table border="0" width="100%" height="100%" id="bg">
		<tr valign="top">
			<td>
				<div class="maincontainer">
					<apex:image id="key1" width="100%"
						value="/resource/1265230873000/Header" />

					<apex:sectionHeader title="VinSolutions Secondary Packet"
						subtitle="Inventory Verification" />

					<apex:form >
						<apex:pageBlock title="Verification">

							<table border="0" width="100%" align="center">
								<tr align="center">
									<td align="center"><apex:commandButton action="{!jumpBackfromInventory}" value="Previous Step" /> <apex:commandButton action="{!confirmWebsite}" value="Next Step" /> <apex:commandButton action="{!saveQuitWeb}" value="Save & Quit"
											onclick="return confirmCancel()" immediate="true" /> <apex:commandButton action="{!confirmWebsite}"
											value="Save - To Confirmation Page"
											rendered="{!welcome.ReachedWebConfirm__c}" />
									</td>
								</tr>
							</table>
							<apex:pageBlockSection title="" columns="1" collapsible="false">
                    
                    I certify that I have reviewed my inventory extensively and that all of the 
                    following data is listed in my Inventory module correctly:  
                    <small><i>(Please check the appropriate
										boxes)</i> </small>

								<apex:inputfield value="{!welcome.Vehicle_Make__c}" />
								<apex:inputfield value="{!welcome.Vehicle_Model__c}" />
								<apex:inputfield value="{!welcome.Vehicle_Year__c}" />
								<apex:inputfield value="{!welcome.Vehicle_Trim_if_entered_in_DMS__c}" />
								<apex:inputfield value="{!welcome.Vehicle_Color_interior__c}" />
								<apex:inputfield value="{!welcome.Vehicle_Color_Exterior__c}" />
								<apex:inputfield value="{!welcome.Lot_Price_Field__c}" />
								<apex:inputfield value="{!welcome.Web_Price_Field__c}" />
								<apex:inputfield value="{!welcome.Cost_Price_Field__c}" />

							</apex:pageBlockSection>

							<apex:pageBlockSection collapsible="false" title=""></apex:pageBlockSection>

							<table border="0" width="100%" align="center">
								<tr align="center">
									<td align="center"><apex:commandButton action="{!jumpBackfromInventory}" value="Previous Step" /> <apex:commandButton action="{!confirmWebsite}" value="Next Step" /> <apex:commandButton action="{!saveQuitWeb}" value="Save & Quit"
											onclick="return confirmCancel()" immediate="true" /> <apex:commandButton action="{!confirmWebsite}"
											value="Save - To Confirmation Page"
											rendered="{!welcome.ReachedWebConfirm__c}" />
									</td>
								</tr>
							</table>


						</apex:pageBlock>

					</apex:form>
				</div>
			</td>
		</tr>
	</table>
</apex:page>