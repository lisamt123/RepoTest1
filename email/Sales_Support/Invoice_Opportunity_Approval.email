<messaging:emailTemplate subject="Opportunity Submitted for Invoice Approval" recipientType="User" relatedToType="Opportunity">
<messaging:HTMLEmailBody >
    <apex:outputField value="{!relatedTo.Name}"/> has been submitted for Invoice Approval.<br/><br/>  
    <apex:outputLink value="https://na5.salesforce.com/{!relatedTo.Id}" id="theLink">Click Here</apex:outputLink> to view the Opportunity awaiting approval.
    
</messaging:HTMLEmailBody>
</messaging:emailTemplate>