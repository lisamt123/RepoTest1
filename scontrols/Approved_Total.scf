  <table width="100%">
    <tr>
	  <td align=center>
        <span class="moduleTitle">Calculating Total... Please Wait</span>
	  </td>
	</tr>
	<tr>
	  <td>&nbsp;</td>
	</tr>
	<tr>
	  <td align=center>
        <img src="/img/waiting_dots.gif" border="0" width=156 height=34>
	  </td>
    </tr>
  </table>
  </center>
</body>
</html>