<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>sr_Dir_Training_Imp</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account__c</field>
        <field>Project__c</field>
        <field>Product_Name__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Upd_Checkbox_Final_QA_Completed</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_ApprovalStatus_QA_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Date_QA_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>WFT_Final_QA_Design_Approved</name>
                <type>Task</type>
            </action>
            <action>
                <name>Your_Final_QA_Design_was_approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Content_Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Print Final QA Process</label>
        <name>Print_Final_QA_Process</name>
        <rejectionActions>
            <action>
                <name>Design_Rejected</name>
                <type>Task</type>
            </action>
            <action>
                <name>Stage_Type_Final_QA_Corr_Pndg</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>the_Final_QA_Design_was_rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Date_QA_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>use this approval process to do Final QA before sending to printer on Print Materials (includes &apos;Mailer&apos; in Project Piece Number field)</description>
    <emailTemplate>Creative/New_Design_to_Approve</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Project_Piece__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Content Approved,Pending Final QA,Final QA Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Piece__c.Project_Type__c</field>
            <operation>contains</operation>
            <value>fulfillment,digital marketing</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Piece__c.Name</field>
            <operation>contains</operation>
            <value>Mailer</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Piece__c.CreatedDate</field>
            <operation>greaterOrEqual</operation>
            <value>7/18/2012</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Final_QA_in_Progress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Date_Submitted_for_QA</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Fulfillment Print Final QA Approval</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
