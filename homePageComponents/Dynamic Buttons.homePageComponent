<?xml version="1.0" encoding="UTF-8"?>
<HomePageComponent xmlns="http://soap.sforce.com/2006/04/metadata">
    <body>&lt;!-- We can locate this div with the script below, traverse up the DOM and then hide the entire sidebar component.--&gt;&lt;div id=&quot;sidebarComponentLocator&quot;&gt;&lt;/div&gt;&lt;!-- Import jQuery from google CDN, could also be static resource--&gt;&lt;script src=&quot;https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js&quot; type=&quot;text/javascript&quot;&gt;&lt;/script&gt;&lt;script type=&quot;text/javascript&quot;&gt;	/*Immediately create a unique alias for this version of jQuery to prevent conflicts with other js libraries*/	var j$ = jQuery.noConflict();		/*Determine what type of object is currently being displayed on the page.  Only confident way to do this is get object prefix*/	var objectPrefix = window.location.href.substring(window.location.href.indexOf(&apos;.com/&apos;) + 5, window.location.href.indexOf(&apos;.com/&apos;) + 8);		/*Query the records from Dynamic_Button__c object as soon as possible, don&apos;t wait for DOM ready event*/	var result = sforce.connection.query(&quot;Select Button_Name__c, Field_Id__c , Field_Value__c from Dynamic_Button__c where Object_Prefix__c = &apos;&quot; + objectPrefix + &quot;&apos;&quot;);	var records = result.getArray(&quot;records&quot;);		/*Execute this code block once page DOM as fully loaded*/	j$(document).ready(function(){		/*Hide the sidebar last as this is lowest priority.  First priority is show/hiding the buttons.		Find the sidebarComponentLocator, then find parent div with class &apos;sidebarModule&apos; and then hide it.*/		j$(&quot;#sidebarComponentLocator&quot;).closest(&quot;.sidebarModule&quot;).hide().prev().hide();				/*First loop through the dynamic button records and hide any that are on the layout.  We must first hide all the buttons		as the Dynamic Buttons records only contain the &apos;show&apos; logic/*/		for (var i = 0; i&lt; records.length; i++){			/*Hide buttons define in Dynamic_Button__c object*/			j$(&quot;input[name=&apos;&quot;+ records[i].Button_Name__c.toLowerCase() +&quot;&apos;]&quot;).hide();		}				/*Now loop through the Dynamic_Button_Records and show button if field value matches that defined in the record*/		for (var i=0; i&lt; records.length; i++) {			/*Get the value from the field on the page layout*/			var recordValue = j$(&quot;#&quot;+records[i].Field_Id__c+&quot;_ileinner&quot;).text();			var showValue = records[i].Field_Value__c;						/*Show the button if the value of the field on this record matches the setting in the Dynamic_Button__c*/			if(recordValue == showValue) {				j$(&quot;input[name=&apos;&quot;+ records[i].Button_Name__c.toLowerCase() +&quot;&apos;]&quot;).show();			}		}	});	&lt;/script&gt;</body>
    <pageComponentType>htmlArea</pageComponentType>
    <width>narrow</width>
</HomePageComponent>
