        <allowPause>true</allowPause>
        <fields>
            <name>oppClosedTxt</name>
            <fieldText>This opportunity is already closed, so it cannot be submitted for approval. If you believe you have received this message in error, please contact the Salesforce team.</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
    </screens>
    <screens>
